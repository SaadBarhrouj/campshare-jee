<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">


<servlet>
        <servlet-name>TestDbServlet</servlet-name>
        <servlet-class>com.campshare.controller.TestDbServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>TestDbServlet</servlet-name>
        <url-pattern>/test-db</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AuthenticationServlet</servlet-name>
        <servlet-class>com.campshare.controller.AuthenticationServlet</servlet-class>
    </servlet>

     <servlet-mapping>
        <servlet-name>AuthenticationServlet</servlet-name>
        <url-pattern>/login</url-pattern>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
</web-app>